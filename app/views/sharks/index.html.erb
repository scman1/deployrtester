<p id="notice"><%= notice %></p>

<h1>Sharks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Facts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sharks.each do |shark| %>
      <tr>
        <td><%= shark.name %></td>
        <td><%= shark.facts %></td>
        <td><%= link_to 'Show', shark, :class => "btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_shark_path(shark), :class => "btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Destroy', shark, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

